<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task"
    android:backgroundTintMode="screen"
    android:minWidth="1080dp"
    android:minHeight="1920dp"
    tools:context=".TaskFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#42000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Card_Date"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="60dp"
                        android:layout_toStartOf="@+id/Adder"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/Date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="50">

                                <Button
                                    android:id="@+id/button_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#00FFFFFF" />

                                <TextView
                                    android:id="@+id/dateTask"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="DD-MM-YYYY"
                                    android:textAlignment="center" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/Time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="50">

                                <Button
                                    android:id="@+id/button_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#00FFFFFF" />

                                <TextView
                                    android:id="@+id/timerTask"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00:00"
                                    android:textAlignment="center" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Card_Text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/typeTask"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="7dp" >

                        <EditText
                            android:id="@+id/typeText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="7dp"
                            android:autoLink="phone|email"
                            android:background="#00FFFFFF"
                            android:gravity="top|left"
                            android:inputType="textMultiLine"
                            android:lines="8"
                            android:singleLine="false"
                            android:text="Text"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imageViewcardPresent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="#FFFFFF"
                        android:src="@drawable/ic_baseline_emoji_emotions_24" />

                    <EditText
                        android:id="@+id/titleTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/imageViewcardPresent"
                        android:text="Line 1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/typeTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleTask"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="false"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"
                        android:entries="@array/type"
                        android:spinnerMode="dropdown"
                        android:src="@drawable/arrow_down"
                        android:textColor="@android:color/black"
                        android:textSize="8sp" />

                    <ImageButton
                        android:id="@+id/Adder"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="344dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="4dp"
                        android:background="#02000000"
                        android:src="@android:drawable/ic_input_add" />

                    <ImageButton
                        android:id="@+id/Remover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Adder"
                        android:layout_alignEnd="@id/Adder"
                        android:layout_marginTop="0dp"
                        android:background="#02000000"
                        android:src="@android:drawable/ic_delete" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RycyclerTask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/itemcard" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>